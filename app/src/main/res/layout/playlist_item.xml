<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:id="@+id/playls_cv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
                android:id="@+id/playls_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/playlist1"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playls_cv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/playls_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="HIT-MAKER: Nổi bật!"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
            android:textSize="18sp"/>
        <TextView
                android:id="@+id/playls_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Various Artists"/>

    </LinearLayout>


</RelativeLayout>